{"ast":null,"code":"import{useState,useEffect}from'react';export const useScrollDetection=function(){let threshold=arguments.length>0&&arguments[0]!==undefined?arguments[0]:50;const[scrollY,setScrollY]=useState(0);const[isScrolled,setIsScrolled]=useState(false);useEffect(()=>{const handleScroll=()=>{const currentScrollY=window.scrollY;setScrollY(currentScrollY);setIsScrolled(currentScrollY>threshold);};window.addEventListener('scroll',handleScroll,{passive:true});return()=>{window.removeEventListener('scroll',handleScroll);};},[threshold]);return{scrollY,isScrolled};};","map":{"version":3,"names":["useState","useEffect","useScrollDetection","threshold","arguments","length","undefined","scrollY","setScrollY","isScrolled","setIsScrolled","handleScroll","currentScrollY","window","addEventListener","passive","removeEventListener"],"sources":["/Users/erictufte/git/consulting-site/src/hooks/useScrollDetection.ts"],"sourcesContent":["import { useState, useEffect } from 'react';\n\nexport const useScrollDetection = (threshold: number = 50) => {\n  const [scrollY, setScrollY] = useState(0);\n  const [isScrolled, setIsScrolled] = useState(false);\n\n  useEffect(() => {\n    const handleScroll = () => {\n      const currentScrollY = window.scrollY;\n      setScrollY(currentScrollY);\n      setIsScrolled(currentScrollY > threshold);\n    };\n\n    window.addEventListener('scroll', handleScroll, { passive: true });\n\n    return () => {\n      window.removeEventListener('scroll', handleScroll);\n    };\n  }, [threshold]);\n\n  return { scrollY, isScrolled };\n};"],"mappings":"AAAA,OAASA,QAAQ,CAAEC,SAAS,KAAQ,OAAO,CAE3C,MAAO,MAAM,CAAAC,kBAAkB,CAAG,QAAAA,CAAA,CAA4B,IAA3B,CAAAC,SAAiB,CAAAC,SAAA,CAAAC,MAAA,IAAAD,SAAA,MAAAE,SAAA,CAAAF,SAAA,IAAG,EAAE,CACvD,KAAM,CAACG,OAAO,CAAEC,UAAU,CAAC,CAAGR,QAAQ,CAAC,CAAC,CAAC,CACzC,KAAM,CAACS,UAAU,CAAEC,aAAa,CAAC,CAAGV,QAAQ,CAAC,KAAK,CAAC,CAEnDC,SAAS,CAAC,IAAM,CACd,KAAM,CAAAU,YAAY,CAAGA,CAAA,GAAM,CACzB,KAAM,CAAAC,cAAc,CAAGC,MAAM,CAACN,OAAO,CACrCC,U